{
  "name": "car-rental-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsx watch --tsconfig tsconfig.json src/index.ts",
    "dev:uat": "dotenv -e .env.uat -- tsx watch --tsconfig tsconfig.json src/index.ts",
    "build": "tsc && tsc-alias --resolve-full-paths",
    "start": "dotenv -e .env.production -- node dist/index.js",
    "start:dev": "dotenv -e .env.development -- node dist/index.js",
    "start:uat": "dotenv -e .env.uat -- node dist/index.js",
    "lint": "biome check .",
    "format": "biome format .",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "dotenv -e .env.development -- tsx src/db/migrate.ts",
    "db:migrate:uat": "dotenv -e .env.uat -- tsx src/db/migrate.ts",
    "db:migrate:prod": "dotenv -e .env.production -- tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "dotenv -e .env.development -- tsx src/db/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nanoid": "^5.1.6",
    "pg": "^8.11.3",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/pg": "^8.10.9",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.20.0",
    "esbuild": "^0.27.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "_moduleAliases": {
    "@src": "dist"
  }
}